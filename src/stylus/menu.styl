.menu
  nav, .overlay, img.logo-menu
    display none !important
  &.active
    nav, .overlay, img.logo-menu
      display block !important
    ul.bullets, span.current, button.down
      //opacity 0 !important
      display none
.menu
  button.switch
    width 48px
    text-align center
    background transparent
    color black
    border none
    &:hover
      cursor pointer
      outline none
  .menu-control
    width 48px
    height 48px
    outline none
    &:hover
      color $red
    .fa-times
      display none
    &.turned
      .fa-times
        display block
      .fa-bars
        display none
      z-index 100
      background $beige
      color black
      transform translateY(calc(-10vh + 48px))
      &:hover
        color black
        background $red
  button.down
    margin-top 10px
    height 30px
  span.current
    height 75px
    position relative
    display block
  position fixed
  left 80px
  bottom calc(25vh - 110px)
  &.active
    bottom auto
    top 230px
  display flex
  flex-direction column
  align-items left
  //justify-content space-between
  ul
    list-style-type none
    width 48px
    height 300px
    margin-top 60px
    display flex
    flex-direction column
    justify-content space-between
    text-align center
    padding-left 0
    li:before
      content url('./assets/icons/bullet.png')
  span.current
    color #1c1c1b
    font-size 41px
    &:before
      margin-right 20px
      width 48px
      content attr(data-num)
      font-family Moderno
      font-size 69px
      color $red
  i.fa-chevron-down
    color $red
  .overlay
    position fixed
    top 0
    right 0
    left 0
    bottom 0
    background #1c1c1bdd
    z-index 99
  nav
    z-index 99
    transform translateY(-10vh)
    margin-left 80px
    ul
      margin-top 0
      height auto
      width auto
      text-align left
      li
        &:before
          width 40px
          margin-right 30px
          display inline-block
          content attr(data-num)
          font-family Moderno
          font-size 48px
          color $red
          user-select none
        color $beige
        text-transform uppercase
        font-size 29px
        //padding 5px 0
        &.active
          &:before
            background $red
            color $beige
            padding-left 10px
            margin-right 20px
          background $red
          color $beige
  img.logo-menu
    z-index 99
    position fixed
    top 20px
    left 30px